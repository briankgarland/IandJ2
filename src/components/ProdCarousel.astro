---
import CarouselProdCards from "./CarouselProdCards.astro";
---
<div class="swiper">
        <CarouselProdCards />
</div>
<div class="prod-btn-wrapper">
    <a href="/our-range" class="prod-btn">
            View Products
    </a>
</div>

<style>
.prod-btn-wrapper {
    background-color: #fdfaf5;
    width: 100vw;;
    transform: translateY(-80px);
    padding-bottom: 20px;
    text-align: center;
    height: 100px;
    top: -20px;

    left: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 100vw;
    position: relative;
    right: 50%;
}
.prod-btn:hover {
    background-color: #ddcba7;
    transition: all .25s ease-in-out;
}
.prod-btn {
    border: 1px solid #ddcba7;
    font-weight: 700;
    width: 300px;
    margin: 0 auto;
    padding: 16px 30px;
    text-decoration: none;
    border-radius: 4px; 
    text-align: center;
    
}
a {
    color: #d51805;
    text-decoration: none;
    font-size: 22px;
    top: 20px;
    position: relative;
}
</style>