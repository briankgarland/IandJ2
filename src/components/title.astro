---
const { pageTitle } = Astro.props;
---

<div class="title-wrapper">
    <h1>{pageTitle}</h1>
</div>

<style lang="scss">
    .title-wrapper {
        background-image: url(https://simplot-media.azureedge.net/-/media/themes/sapl/brands/australia/iandj/images/Backgrounds/content-bg.jpg);
        height: 125px;
        display: grid;
        place-content: center;
        position: relative;

        left: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        max-width: 100vw;
        position: relative;
        right: 50%;
        width: 100vw;

        h1 {
        font-size: 18px;
        font-weight: 900;
            &::after {
                content: " ";
                width: 40px;
                height: 2px;
                background: #3a3938;
                position: absolute;
                bottom: 35px;
                left: 50%;
                margin-left: -20px;
            }
        }
    }
</style>