---
import Layout from "../layouts/Layout.astro";
import { Breadcrumbs, BreadcrumbsItem } from 'accessible-astro-components';
import Title from "../components/title.astro";

const pageTitle = "eBooks";
---

<Layout title={pageTitle}>
  <Breadcrumbs>
    <BreadcrumbsItem 
      href="/"
      label="Home"
    />
    <BreadcrumbsItem
      currentPage={true}
      label={pageTitle}
    />
  </Breadcrumbs>
  <Title pageTitle={pageTitle} />
  <div class="list-wrapper">
    <h4>Recipe Inspirations</h4>
    <div class="book-wrapper">
      <div class="book">
        <a href="https://simplot-media.azureedge.net/-/media/project/sapl/brands/australia/iandj/documents/ebooks/ebook-finest-fish-dishes-pdf.pdf?rev=2599a753a2b84a44b2048e87983ed0d2" target="_blank">
          <img src="https://simplot-media.azureedge.net/-/media/project/sapl/brands/australia/iandj/images/ebooks/ebook-finest-fish-dishes-jpg.jpg" alt="">
        </a>
      </div>
    </div>
  </div>

</Layout>

<style lang="scss">
  .list-wrapper {
    background-image: url(https://simplot-media.azureedge.net/-/media/themes/sapl/brands/australia/iandj/images/Backgrounds/content-bg.jpg);

    left: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 100vw;
    position: relative;
    right: 50%;
    width: 100vw;

    .book-wrapper {
      display: flex;
      flex-wrap: wrap;
      column-gap: 2rem;
      row-gap: 0;
      justify-content: center;
      max-width: 1120px;
      margin-inline: auto;
      text-align: center;
      padding: 20px 0px;
    }

    .book {
      margin-top: 40px;
      margin-bottom: 10px;
    }
}
  h4 {
    text-align: center;
  }
  img {
    height: 300px;
  }
</style>
